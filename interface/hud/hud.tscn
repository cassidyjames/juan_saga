var score = 0 setget set_score
enum MODES {ADD, SET, REMOVE}

func set_score(value, MODE):
	match MODE:
		ADD:
			score += value
		SET:
			score = value
		REMOVE:
			score = clamp(0, score - value, 999999)
	var t = \"score: {amount}\"
	text = t.format({\"amount\":int(score)})
	score_container.score = score
	
func _ready():
	set_score(0, SET)"

